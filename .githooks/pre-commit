#!/usr/bin/env sh
# Prefer pwsh; fall back to Windows powershell.exe
if command -v pwsh >/dev/null 2>&1; then
  exec pwsh -NoProfile -NonInteractive -ExecutionPolicy Bypass -File "$(git rev-parse --show-toplevel)/.githooks/pre-commit.ps1"
else
  exec powershell -NoProfile -NonInteractive -ExecutionPolicy Bypass -File "$(git rev-parse --show-toplevel)/.githooks/pre-commit.ps1"
fi